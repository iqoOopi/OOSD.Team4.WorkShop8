<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#17007BFF"
                android:endColor="#1B004F81"
                android:angle="270" />
            <corners
                android:radius="7dp" />
            <stroke
                android:width="1dp"
                android:color="#222222" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="#9E040305" />
        </shape>
    </item>
</selector>
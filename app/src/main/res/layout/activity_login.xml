<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/login_activity"
    android:background="@drawable/login_bg_img">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/travelexperts_logo_white" />

    <RelativeLayout
        android:id="@+id/rlLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnRegister"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="60dp">

        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="0dp"
            android:text="Email: "
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvUsername"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="90dp"
            android:background="@drawable/rounded_edittext"
            android:hint="Email@email.com"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:minHeight="45dp"
            android:paddingLeft="20dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#99D3D0D0"
            android:textCursorDrawable="@drawable/cursor_darkedittext" />

        <TextView
            android:id="@+id/tvPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/etUsername"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="0dp"
            android:text="Password: "
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvPassword"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="90dp"
            android:background="@drawable/rounded_edittext"
            android:hint="Password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:minHeight="45dp"
            android:paddingLeft="20dp"
            android:password="true"
            android:textColor="#FFFFFF"
            android:textColorHint="#99D3D0D0"
            android:textCursorDrawable="@drawable/cursor_darkedittext"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="90dp"
            android:background="@drawable/bg_button_login"
            android:drawableRight="@drawable/pencil"
            android:paddingLeft="150dp"
            android:paddingRight="140dp"
            android:text="@string/title_login"
            android:textColor="#093180"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="203dp"
                android:layout_height="58dp"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_button"
                android:drawableRight="@drawable/backpack"
                android:paddingLeft="50dp"
                android:paddingRight="40dp"
                android:text="Register"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnBrowse"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="90dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button"
                android:drawableRight="@drawable/travel"
                android:paddingLeft="50dp"
                android:paddingRight="40dp"
                android:text="Explore"
                android:textColor="#FFFFFF" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingStart="90dp"
            android:paddingEnd="90dp">

            <Button
                android:id="@+id/btnFacebook"
                android:layout_width="129dp"
                android:layout_height="58dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/bg_button"
                android:drawableRight="@drawable/facebook"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="Facebook"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btnGoogle"
                android:layout_width="127dp"
                android:layout_height="58dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button"
                android:drawableRight="@drawable/google"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="Google"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btnTwitter"
                android:layout_width="129dp"
                android:layout_height="58dp"
                android:background="@drawable/bg_button"
                android:drawableRight="@drawable/twitter"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="Twitter"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/labellAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="About | Contact"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

</LinearLayout>